<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.briannak.inclass02.MainActivity">

    <TextView
        android:id="@+id/length1"
        android:text="Length 1:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editLength1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <EditText
        android:id="@+id/editLength1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editLength2"
        android:layout_alignStart="@+id/editLength2" />

    <TextView
        android:id="@+id/length2"
        android:text="Length 2:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editLength2"
        android:layout_alignLeft="@+id/length1"
        android:layout_alignStart="@+id/length1" />

    <EditText
        android:id="@+id/editLength2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_below="@+id/length1"
        android:layout_alignLeft="@+id/triangle"
        android:layout_alignStart="@+id/triangle" />

    <TextView
        android:id="@+id/shapeIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a shape."
        android:layout_above="@+id/result"
        android:layout_alignLeft="@+id/calculate"
        android:layout_alignStart="@+id/calculate"
        android:layout_marginBottom="68dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal"
        android:text="result"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/triangle"
        android:layout_marginBottom="35dp"
        android:layout_alignBottom="@+id/shapeIndicator"
        android:layout_toLeftOf="@+id/square"
        android:layout_toStartOf="@+id/square"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:id="@+id/square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/square"
        android:layout_alignTop="@+id/triangle"
        android:layout_alignRight="@+id/shapeIndicator"
        android:layout_alignEnd="@+id/shapeIndicator" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/square"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/square"
        android:layout_toRightOf="@+id/square"
        app:srcCompat="@drawable/circle" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/result"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
